root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{json,yaml,yml}]
max_line_length = 120

[*.go]
indent_style = tab
indent_size = 4
max_line_length = unset

[go.{mod,sum,work,work.sum}]
indent_style = unset
indent_size = unset
charset = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
max_line_length = unset
